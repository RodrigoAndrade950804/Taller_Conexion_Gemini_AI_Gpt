﻿﻿@{
    ViewData["Title"] = "MulloPilamungaBurgaBOT";
    ViewData["BodyClass"] = "bg-chatbot";
    var response = ViewBag.Response as string;
    var provider = ViewBag.Provider as string;
}


<h1 class="text-center my-4 display-4">MulloPilamungaBurgaBOT</h1>

<div class="row mb-4">
    <!-- Josue Mullo -->
    <div class="col-md-4 mb-3">
        <div class="card h-100">
            <div class="row g-0">
                <div class="col-5">
                    <img src="~/imgs/josue.jpeg" class="img-fluid rounded-start h-100" style="object-fit: cover;" alt="Josue Mullo">
                </div>
                <div class="col-7">
                    <div class="card-body">
                        <h5 class="card-title">Josue Mullo</h5>
                        <p class="card-text">Correo: josue.mullo@udla.edu.ec</p>
                        <p class="card-text">Intereses: Desarrollo backend, ciberseguridad, videojuegos</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Martin Burga -->
    <div class="col-md-4 mb-3">
        <div class="card h-100">
            <div class="row g-0">
                <div class="col-5">
                    <img src="~/imgs/martin.jpg" class="img-fluid rounded-start h-100" style="object-fit: cover;" alt="Martin Burga">
                </div>
                <div class="col-7">
                    <div class="card-body">
                        <h5 class="card-title">Martin Burga</h5>
                        <p class="card-text">Correo: martin.burga@udla.edu.ec</p>
                        <p class="card-text">Intereses: Inteligencia artificial, bases de datos, videojuegos</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Santiago Pilamunga -->
    <div class="col-md-4 mb-3">
        <div class="card h-100">
            <div class="row g-0">
                <div class="col-5">
                    <img src="~/imgs/santiago.jpeg" class="img-fluid rounded-start h-100" style="object-fit: cover;" alt="Santiago Pilamunga">
                </div>
                <div class="col-7">
                    <div class="card-body">
                        <h5 class="card-title">Santiago Pilamunga</h5>
                        <p class="card-text">Correo: santiago.pilamunga@udla.edu.ec</p>
                        <p class="card-text">Intereses: Frontend, diseño de interfaces, música</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<!-- Caja de chat -->
<div class="card shadow-sm">
    <div class="card-header bg-primary text-white">
        Chat IA - Selecciona proveedor y conversa
    </div>
    <div class="card-body" id="chatHistory" style="max-height: 700px; overflow-y: auto;">
        @if (response != null)
        {
            <div class="d-flex flex-column">
                <!-- Simulación mensaje del usuario con clase personalizada -->
                <div class="d-flex justify-content-end mb-2">
                    <div class="chat-bubble-user" style="max-width: 75%;">
                        <strong>Tú:</strong><br />
                        @ViewBag.Prompt
                    </div>
                </div>
                <!-- Simulación mensaje del bot con clase personalizada -->
                <div class="d-flex justify-content-start mb-2">
                    <div class="chat-bubble-bot" style="max-width: 75%;">
                        <strong>@provider:</strong><br />
                        @Html.Raw(response.Replace("\n", "<br />"))
                    </div>
                </div>

            </div>
        }
        else
        {
            <p class="text-muted">Envía tu primera pregunta para comenzar.</p>
        }
    </div>

    <!-- Formulario de pregunta -->
    <div class="card-footer">
        <form id="chatForm" class="row g-2 align-items-end">
            <div class="col-md-3">
                <label for="provider" class="form-label">Proveedor:</label>
                <select id="provider" name="provider" class="form-select" required>
                    <option value="">-- Selecciona --</option>
                    <option value="Gemini">Gemini</option>
                    <option value="Groq">Groq</option>
                </select>
            </div>
            <div class="col-md-5">
                <label for="prompt" class="form-label">Pregunta:</label>
                <textarea id="prompt" name="prompt" class="form-control" rows="2" required></textarea>
            </div>
            <div class="col-md-2">
                <label for="guardadoPor" class="form-label">Guardado por:</label>
                <input type="text" id="guardadoPor" name="guardadoPor" class="form-control" placeholder="Invitado (opcional)" />
            </div>
            <div class="col-md-2 text-end">
                <button type="submit" class="btn btn-primary w-100">Enviar</button>
            </div>
        </form>

    </div>
</div>

<!-- Error -->
@if (ViewBag.Error != null)
{
    <div class="alert alert-danger mt-3">@ViewBag.Error</div>
}
