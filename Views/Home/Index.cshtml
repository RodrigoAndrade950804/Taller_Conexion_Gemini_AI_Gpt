﻿@{
    ViewData["Title"] = "Home Page";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8 text-center">
            <h1 class="display-4 mb-3">¡Bienvenido a MulloPilamungaBurgaBOT!</h1>
